<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
    <div class="card-body" data-id="<%=	 portfolio_item.id %>">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%></span>
        <%= portfolio_item.subtitle%>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">

          <% if logged_in?(:site_admin) %>
            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
            <%= link_to 'Delete',portfolio_path(portfolio_item),  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger disabled' %>
            <%	end  %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
