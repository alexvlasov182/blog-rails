<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)%></span>
        <%= portfolio_item.subtitle%>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
          <% if logged_in?(:site_admin) %>
          <%= link_to 'Delete Portfolio Item',portfolio_path(portfolio_item),  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <%	end  %>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
