<div class="container">
  <div class="row">
    <div class="col-md-7">
      <% if @portfolio_item.main_image %>
        <%= image_tag @portfolio_item.main_image %>
      <% end %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <em><%= @portfolio_item.subtitle %></em>

      <div>
        <p>
          <%= @portfolio_item.body %>
        </p>
      </div>

      <h2>Technologies Used: </h2>

      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>

    </div>
  </div>
</div>




